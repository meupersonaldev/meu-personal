PORT=3001
NODE_ENV=development

# Frontend URL principal (continua sendo usado em redirects e templates de email)
FRONTEND_URL=http://localhost:3000

# Lista de origens permitidas no CORS (separe por vírgula e mantenha localhost para testes)
# Exemplo: https://sua-app.com,https://app.sua-app.com,http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# Supabase (obrigatório no backend)
SUPABASE_URL=https://SEU-PROJETO.supabase.co
SUPABASE_SERVICE_ROLE_KEY=coloque_sua_service_role_key_aqui

# Auth
JWT_SECRET=defina-uma-chave-segura-aqui
JWT_EXPIRES_IN=7d

# Defaults de negócio (MVP)
DEFAULT_CREDITS_PER_CLASS=1

# Pagamentos (Asaas) — opcional para MVP
# Para ambiente sandbox do Asaas use a base abaixo e sua API KEY de sandbox
ASAAS_BASE_URL=https://sandbox.asaas.com/api/v3
ASAAS_API_KEY=

DEFAULT_FRANQUEADORA_ID=
