    if (!isAuthenticated) {
      router.push('/aluno/login')
    }
  }, [isAuthenticated, router])

  useEffect(() => {
    if (!isAuthenticated || !token) return
    fetchUnits()
    fetchAvailableUnits()
  }, [isAuthenticated, token, fetchUnits, fetchAvailableUnits])

  useEffect(() => {
    if (!user?.id) return
    loadBookings(user.id)
  }, [user?.id, loadBookings])

