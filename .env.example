# Database (Supabase)
DATABASE_URL=postgresql://postgres:[sua-senha]@aws-0-...aws.com:5432/postgres?schema=public

# API
PORT=3001
FRONTEND_URL=https://seu-dominio.com
APP_BASE_URL=https://seu-dominio.com/api
NEXT_PUBLIC_API_URL=https://seu-dominio.com/api

# Auth
JWT_SECRET=gerado_com_openssl_rand_base64_32
JWT_EXPIRES_IN=7d

# Asaas
ASAAS_API_KEY=your_asaas_api_key
ASAAS_API_URL=https://www.asaas.com/api/v3
ASAAS_ENV=sandbox
ASAAS_WEBHOOK_SECRET=your_asaas_webhook_secret

# Supabase
SUPABASE_URL=https://[seu-projeto].supabase.co
SUPABASE_ANON_KEY=[chave-anonima]
